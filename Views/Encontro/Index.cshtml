@model IEnumerable<Encontro>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DtEncontro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DsLocal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DsStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DtEncontro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DsLocal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DsStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CdEncontro">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CdEncontro">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CdEncontro">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
