@model IEnumerable<Especie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NmCientifico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NmPopular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DsFoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DsDescricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NmCientifico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NmPopular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DsFoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DsDescricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CdEspecie">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CdEspecie">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CdEspecie">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
